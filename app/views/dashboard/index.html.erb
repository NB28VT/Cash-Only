<div class="row dashboard">
  <div class="large-12 columns">





<div class="row">
  <div class="large-12 columns">
    <h1>Emma WATson</h1>
    <%= image_tag("http://i0.kym-cdn.com/photos/images/newsfeed/000/173/576/Wat8.jpg?1315930535", class: "profile-picture") %>
    <h3 class="show-for-small"><%= current_user.email %><hr/></h3>
    <div class="progress [small-# large-#] [secondary alert success] [radius round]">
      <span class="meter" style="width: 15%; background-color: green;"></span>
    </div>
    <ul>
      <li>Owes: $13</li>
      <li>Owed: $5</li>
      <li>Balance: $7</li>
    </ul>
  </div>


  <div class="large-6 columns">



  </div>
  <%= link_to "Add transaction", new_transaction_path, class: "small-12 large-6 button" %>
</div>


<div class="large-12 colummns transaction">

  <h3>Your transactions</h3>

  <table class="larg12 columns">
    <thead>
      <tr>
        <th width="100">Amount</th>
        <th width="100">Date</th>
        <th>Description</th>
        <th width="150">/Owed by</th>
        <th width="150">Owed to</th>
        <th width="150">Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @transactions.each do |t| %>
        <tr>
          <td><%= t.amount %></td>
          <td><%= t.created_at %></td>
          <td><%= t.description %></td>
          <td><%= t.payer_id %></td>
          <td><%= t.payee_id %></td>
          <td><%= link_to "Delete", t, method: "delete", confirm: "Are you Sure?" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

</div>
</div>
