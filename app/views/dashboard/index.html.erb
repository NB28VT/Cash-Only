<div class="row dashboard">

    <div class="row">
      <div class="large-5 medium-5 small-12 columns">
        <h4><%= current_user.email %></h4>
        <%= image_tag("http://i0.kym-cdn.com/photos/images/newsfeed/000/173/576/Wat8.jpg?1315930535", class: "profile-picture") %>
        <h3 class="show-for-small"><%= current_user.email %><hr/></h3>
        <div class="progress [small-# large-6] [secondary alert success] [radius round]">
          <span class="meter" style="width: 15%; background-color: green;"></span>
        </div>
        <ul>
          <li>Owes: $<%= current_user.debit_total %></li>
          <li>Owed: $<%= current_user.credit_total %> </li>
          <li>Balance: $<%= current_user.balance %></li>
        </ul>
      </div>

      <div class="large-7 medium-7 small-12 columns">


        <table>
          <% if @friend_group %>
            <h2><%= @friend_group.group_name %></h2>
            <thead>
              <tr>
                <th width="50">User</th>
                <th width="150">Balance</th>
              </tr>
            </thead>
            <tbody>
              <% @friend_group.users.each do |u| %>
                <tr>
                  <td><%= u.email %></td>
                  <td><%= u.balance %></td>
                </tr>
              <% end %>
            </tbody>

          <% else %>
              <h2>Not in friend group</h2>
          <% end %>

        </table>
        <%= link_to "Add transaction", new_transaction_path, class: "small-12 medium-7 large-7 button" %>
        <%= link_to "View transactions", transactions_path, class: "small-12 medium-7 large-7 button" %>
      </div>
    </div>







</div>
